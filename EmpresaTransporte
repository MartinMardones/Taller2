package org.example;

import org.example.Bus;
import org.example.Ciudad;
import org.example.Conductor;
import org.example.Viaje;

import java.util.ArrayList;
import java.util.List;

public class EmpresaTransporte {

    private String rut;
    private String direccion;
    private String redesSociales;

    private List<Conductor> conductores;
    private List<Ciudad> ciudades;
    private List<Viaje> viajes;
    private List<Bus> buses;



    public String getRut() {
        return this.rut;
    }


    String getDireccion() {
        return this.direccion;
    }


    public void setDireccion(String direccion){
        this.direccion = direccion;
    }

    public String getRedesSociales()
    {return this.redesSociales;}


    public void setRedesSociales(String redesSociales) {
            this.redesSociales = redesSociales;
    }

    public EmpresaTransporte(String rut, String direccion, String redesSociales) {
            this.rut = rut;
            this.direccion = this.direccion;
            this.redesSociales = redesSociales;
        this.conductores = new ArrayList<>();
        this.viajes = new ArrayList<> ();
        this.ciudades = new ArrayList<> ();
        this.buses = new ArrayList<> ();





    }




    public boolean agregarBus(String patente, String marca){
        if(buscarBus(patente,marca) == null) {
            Bus bus = new Bus (patente, marca);
            this.buses.add(bus);
            return true;
        }
        else{
            return false;
        }
    }
    public boolean agregarBus(Bus bus){
        if(buscarBus(bus.getPatente(),bus.getMarca()) == null){
            this.buses.add(bus);
            return true;
        }
        else{
            return false;
        }
    }

    public Bus buscarBus(String patente, String marca){
        for(Bus bus : this.buses){
            if(bus.getPatente().equals(patente) && bus.getMarca().equals(marca)){
                return bus;
            }
        }
        return null;
    }
    public List buscarBus(String patente){
        ArrayList<Bus> buses = new ArrayList<> ();
        for(Bus bus : this.buses){
            if(bus.getPatente().equals(patente)){
                buses.add(bus);
            }
        }
        return buses;
    }

    public boolean eliminarBus(String patente, String marca){
        Bus bus= this.buscarBus (patente,marca);
        if(bus != null){
            this.buses.remove(bus);
            return true;
        }
        else {
            return false;
        }
    }

    public boolean agregarConductor(String nombre, String apellido, int numeroTelefonico, String tipoLicencia ){
        if(buscarConductor(nombre,apellido) == null) {
            Conductor conductor = new Conductor (nombre, apellido);
            this.conductores.add(conductor);
            return true;
        }
        else{
            return false;
        }
    }
    public boolean agregarConductor(Conductor conductor){
        if(buscarConductor(conductor.getNombre(),conductor.getApellido()) == null){
            this.conductores.add(conductor);
            return true;
        }
        else{
            return false;
        }
    }

    public Conductor buscarConductor(String nombre, String apellido){
        for(Conductor conductor : this.conductores){
            if(conductor.getNombre().equals(nombre) && conductor.getApellido().equals(apellido)){
                return conductor;
            }
        }
        return null;
    }


    }
